@model SupermarketWEB.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Index Products";
}
<h1>Index Products</h1>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Products[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Products[0].Price)</th>
            <th>@Html.DisplayNameFor(model => model.Products[0].Stock)</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Stock)</td>

                <td>
                   <span></span>
                </td>
            </tr>
        }
    </tbody>
