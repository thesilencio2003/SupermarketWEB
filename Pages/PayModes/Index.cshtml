@page
@model SupermarketWEB.Pages.Pay_modes.IndexModel
@{
    ViewData["Title"] = "Index PayModes";
}
<h1>Index PayMode</h1>
<a asp-page="Create" class="btn btn-success">Create New</a>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.PayModes[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.PayModes[0].Observation)</th>

            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PayModes)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Observation)</td>

                <td>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
