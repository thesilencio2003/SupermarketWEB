@page
@model SupermarketWEB.Pages.Providers.IndexModel
@{
    ViewData["Title"] = "Index Providers";
}
<h1>Index Providers</h1>
<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Providers[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Providers[0].Email)</th>
            <th>@Html.DisplayNameFor(model => model.Providers[0].Phone)</th>
            <th>@Html.DisplayNameFor(model => model.Providers[0].Address)</th>
            <th>@Html.DisplayNameFor(model => model.Providers[0].City)</th>
            <th>@Html.DisplayNameFor(model => model.Providers[0].State)</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Providers)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.City)</td>
                <td>@Html.DisplayFor(modelItem => item.State)</td>

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>



            </tr>
        }
    </tbody>
</table>
